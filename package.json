{
  "name": "woovers-js",
  "version": "1.0.0",
  "description": "NodeJS web-server for mimicking the Woovi/OpenPix API",
  "main": "/src/app.ts",
  "type": "module",
  "bin": {
    "woovers-js": "bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "start": "bun src/server.ts",
    "dev": "bun --watch src/server.ts",
    "build": "bun build src/server.ts --outdir dist --minify --target bun && tsc --emitDeclarationOnly"
  },
  "dependencies": {
    "@types/bun": "^1.2.20",
    "@types/express": "^4.17.17",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "uuid": "^11.1.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "bun-types": "^1.2.20",
    "typescript": "^5.9.2"
  }
}