{
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "types": ["bun-types"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}